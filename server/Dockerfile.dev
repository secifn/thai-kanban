FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies
RUN npm install

# Generate Prisma client
RUN npx prisma generate

# Copy source code
COPY . .

# Create database
RUN npx prisma db push

# Expose port
EXPOSE 3001

# Start dev server with nodemon
CMD ["npm", "run", "dev"]
